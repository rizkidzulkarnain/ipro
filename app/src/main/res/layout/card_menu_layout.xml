<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardBackgroundColor="@color/colorPrimaryYellowFlat"
        card_view:cardCornerRadius="@dimen/card_menu_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iconMenu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:padding="30dp"
                tools:src="@drawable/test"/>

            <TextView
                android:id="@+id/titleMenu"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iconMenu"
                android:paddingLeft="@dimen/menu_title_padding"
                android:paddingRight="@dimen/menu_title_padding"
                android:paddingBottom="@dimen/menu_title_padding"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/menu_title"
                tools:text="testing" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>